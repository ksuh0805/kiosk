<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.samilcts.app.mpaio.demo2.CartActivity"
    tools:showIn="@layout/activity_cart"
    android:orientation="vertical"

    android:paddingLeft="@dimen/padding_cart_content_h"
    android:paddingRight="@dimen/padding_cart_content_h"
    android:paddingTop="@dimen/padding_top_cart_content"
    android:paddingBottom="@dimen/padding_bottom_cart_content">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_total_layout"
        layout="@layout/header_cart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_line"
        android:orientation="horizontal"
        android:id="@+id/imageView3"
        android:background="@color/colorWhite65" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flList">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.samilcts.app.paymgate.demo.nice.mpaio2.CartActivity"
            tools:listitem="@layout/content_list_product"
            android:id="@+id/productListView"

            android:layout_weight="1">



        </android.support.v7.widget.RecyclerView>

    </FrameLayout>


</LinearLayout>
