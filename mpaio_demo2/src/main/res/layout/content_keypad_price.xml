<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorWhite70"
            android:layout_alignLeft="@+id/price"
            android:layout_alignRight="@+id/price"
            android:layout_alignBottom="@+id/price"></FrameLayout>

    <com.devspark.robototextview.widget.RobotoEditText
        android:layout_width="@dimen/width_calculator_price"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/price"
        android:textAlignment="gravity"

        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_calculator_price"
        android:clickable="false"
        android:textIsSelectable="false"
        android:textCursorDrawable="@null"

        android:contextClickable="false"
        android:enabled="true"
        android:maxLength="8"

        android:longClickable="false"
        android:linksClickable="false"
        android:paddingRight="20dp"

        android:text="123"
        app:robotoFontFamily="roboto"
        app:robotoTextWeight="medium"
        android:background="@null"

        tools:targetApi="m"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/key_del"
            android:layout_alignRight="@+id/price"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_del"
            android:layout_marginRight="10dp" />

</RelativeLayout>


